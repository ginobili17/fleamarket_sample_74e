.account-page
  .account-page__header
    .account-page__header__box
      =link_to '/hogehoge'do
        =image_tag 'material/logo/logo.png', height: '50px'
  .account-page__create
    %br
    %p アカウントをお持ちでない方はこちら
    .account-page__create-btn
      %br
      %input{class: "account-page__create-btn", type: "submit", value:"新規会員登録"}

  .account-page__signin__template
    %br
    %label メールアドレス
    .account-page__signin__form
      %input{class: "account-page__signup__form", placeholder: "メールアドレス"}  
  .account-page__signin__template
    %br
    %label パスワード
    .account-page__signin__form
      %input{class: "account-page__signup__form", placeholder: "パスワード"}

  .account-page__signin-btn
    %input{class: "account-page__signin-btn", type: "submit", value:"ログイン"}


